<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/SellerRegister_layoutPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_seller" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Personal Information"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/SellerRegister_firstNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:hint="Enter first name"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/SellerRegister_lastNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:hint="Enter last name"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/SellerRegister_emailEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:hint="Enter Email"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/SellerRegister_birthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_edit"
                    android:clickable="true"
                    android:enabled="true"
                    android:gravity="center"
                    android:hint=" Birth of date(yy/mm/dd)"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/SellerRegister_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/SellerRegister_confirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_edit"
                    android:gravity="center"
                    android:hint="@string/re_password"
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:textDirection="ltr"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:text="Gender"
                    android:textSize="17sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/SellerRegister_maleRdio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="17sp" />

                    <RadioButton
                        android:id="@+id/SellerRegister_femaleRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textSize="17sp" />
                </RadioGroup>

                <Button
                    android:id="@+id/SellerRegister_continueInfoBtn"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_registerbtn"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:text="@string/Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SellerRegister_layoutStoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorGray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/SellerRegister_profileImage"
                                android:layout_width="match_parent"
                                android:layout_height="170dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_add_image" />

                            <ImageButton
                                android:id="@+id/SellerRegister_addImage"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_alignStart="@+id/SellerRegister_profileImage"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/background_btn_login"
                                android:drawablePadding="10dp"
                                android:src="@drawable/ic_add_photo"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/SellerRegister_StoreName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/background_edit"
                        android:gravity="center"
                        android:hint="Enter store name"
                        android:inputType="text"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:textDirection="ltr"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/SellerRegister_deliveryTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_edit"
                        android:gravity="center"
                        android:hint="Delivery time"
                        android:inputType="text"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:textDirection="ltr"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/SellerRegister_typeHomemadeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:dropDownSelector="@color/colorYello"
                        android:entries="@array/categories"
                        android:gravity="center"
                        android:padding="8dp"
                        android:pointerIcon="arrow"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/SellerRegister_citySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:dropDownSelector="@color/colorYello"
                        android:entries="@array/cities"
                        android:gravity="center"
                        android:padding="8dp"
                        android:pointerIcon="arrow"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/SellerRegister_areaName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edit"
                        android:gravity="center"
                        android:hint="Area name"
                        android:paddingBottom="7dp"
                        android:paddingStart="10dp"
                        android:paddingTop="7dp"
                        android:textDirection="ltr"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/Linear_Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/SellerRegister_getLocationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:background="@drawable/background_btn_login"
                            android:paddingBottom="4dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:paddingTop="4dp"
                            android:src="@drawable/ic_my_location" />


                        <EditText
                            android:id="@+id/SellerRegister_locationEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_edit"
                            android:enabled="true"
                            android:gravity="center"
                            android:hint="Location"
                            android:paddingBottom="7dp"
                            android:paddingStart="10dp"
                            android:paddingTop="7dp"
                            android:textDirection="ltr"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/SellerRegister_deliveryServiceCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery service"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:onClick="onCheckboxClicked"
                        />
                        <CheckBox
                            android:id="@+id/SellerRegister_onlinePaymentCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online Payment"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:onClick="onCheckboxClicked"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/SellerRegister_deliveryPriceEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_edit"
                            android:enabled="true"
                            android:gravity="center"
                            android:hint="delivery price"
                            android:layout_marginEnd="10dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:layout_weight="1"
                            android:textDirection="ltr"
                            android:textSize="16sp" />
                        <EditText
                            android:id="@+id/SellerRegister_minimumPriceEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_edit"
                            android:enabled="false"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:hint="Minimum price"
                            android:textDirection="ltr"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/SellerRegister_registerInfoBtn"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/background_registerbtn"
                        android:drawableEnd="@drawable/ic_done"
                        android:paddingEnd="7dp"
                        android:paddingStart="10dp"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>